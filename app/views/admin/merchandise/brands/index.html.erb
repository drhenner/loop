<%= render :partial => '/admin/merchandise/sub_header'%>

<h1> Brands </h1>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for brand in @brands %>
    <tr>
      <td><%= brand.name %></td>
      <td><%= link_to "Show", admin_merchandise_brand_path(brand) %></td>
      <td><%= link_to "Edit", edit_admin_merchandise_brand_path(brand) %></td>
    </tr>
  <% end %>
</table>
<%#= will_paginate @brands %>
<p><%= link_to "New Brand", new_admin_merchandise_brand_path, :class => 'button' %></p>
