<h1> Companies </h1>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for company in @companies %>
    <tr>
      <td><%= company.name %></td>
      <td><%= link_to "Show", admin_seller_company_path(company) %></td>
      <td><%= link_to "Edit", edit_admin_seller_company_path(company) %></td>
      <td><%= link_to "Destroy", admin_seller_company_path(company), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Company", new_admin_seller_company_path, :class => 'button' %></p>
