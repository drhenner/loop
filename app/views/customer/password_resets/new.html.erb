<% content_for :head do -%>
  <%= stylesheet_link_tag 'signup.css' %>
  <%#= stylesheet_link_tag 'cupertino/jquery-ui-1.8.5.custom' %>
<% end %>

<h1> <%= I18n.t :reset_password_title %> </h1>

<p>
  <%=t :reset_password_text %>
</p>

<%= form_for(@user, :url => customer_password_reset_path(@user)) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

<% end %>
